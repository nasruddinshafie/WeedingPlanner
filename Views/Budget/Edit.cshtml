@model Budget
@{
    ViewData["Title"] = "Edit Budget";
}


<div class="container">
    @Html.HiddenFor(Model => Model.Id)
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div style="border-color: #906494;background-color:#ECDAFF!important;" class="card ">
                <div class="card-header">
                    <h3 class="card-title">Edit Budget</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form method="post" asp-action="Edit">
                    <div class="card-body">
                        <div class="form-group">
                            <label asp-for="Name">Budget Name</label>
                            <input type="text" asp-for="Name" style="border-color: #906494;background-color:#E1CEF0!important;" class="form-control" placeholder="@Model.Name">
                            <span asp-validation-for="Name" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Description">Description</label>
                            <textarea class="form-control" rows="3" style="border-color: #906494;background-color:#E1CEF0!important;" asp-for="Description" placeholder="@Model.Description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Amount">Amount</label>
                            <input type="number" class="form-control" style="border-color: #906494;background-color:#E1CEF0!important;" id="Amount" asp-for="Amount" name="Amount" placeholder="@Model.Amount">
                            <span asp-validation-for="Amount" class="text-danger"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Balance">Balance</label>
                            <input type="number" asp-for="Balance" style="border-color: #906494;background-color:#E1CEF0!important;" class="form-control" id="Balance" name="Balance" placeholder="@Model.Balance">
                            <span asp-validation-for="Balance" class="text-danger"></span>

                        </div>

                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" style="border-color: #906494;background-color:#906494!important;color:white" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
